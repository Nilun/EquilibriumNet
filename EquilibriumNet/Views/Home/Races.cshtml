
@{
    ViewBag.Title = "Races";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<body>
    <h2>Races</h2>

    <div id="myCarousel" class="carousel slide" data-ride="carousel" >

        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active" style="background-color:saddlebrown" ></li>
            <li data-target="#myCarousel" data-slide-to="1"  style="background-color:saddlebrown"></li>
        </ol>

        <div class="carousel-inner">
            <div class="item active">
                
                <img src="~/Images/okkan.jpg" alt="Okkan" style="height:500px;position:center;" >
                <div class="carousel-caption">
                    <h3 style="color:black">Okkan</h3>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/bebokkan.jpg" alt="Bebokkan" style="height:500px"  >
                <div class="carousel-caption">
                    <h3 style="color:black">Bebokkan</h3>
                </div>
            </div>


        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>
</body>
