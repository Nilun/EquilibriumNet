@model IEnumerable<EquilibriumCore.Models.Weapon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeWeapon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondTypeWeapon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfDice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValueMax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bonus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Special)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeWeapon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondTypeWeapon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfDice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueMax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bonus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Special)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
