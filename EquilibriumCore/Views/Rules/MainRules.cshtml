@model Tuple<List<EquilibriumCore.Models.Rules>,string >


@{
    ViewData["Title"] = "MainRules";
}

<h2>MainRules</h2>
<p>
    @Html.Raw(ViewBag.rules);
</p>
<div style="height:100% ; overflow:auto">
    <h4>Rules</h4>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @foreach (var item in Model.Item1)
                    {
                          <a class="nav-link btn btn-secondary" asp-action="MainRules" asp-route-id="@item.ID">@item.Category </a> 
                    }
                </li>
            </ul>
        </div>
    </nav>

    <hr /> 
    @if (Model.Item2 != "")
    {

        @Html.Raw(Model.Item2);
    }

</div>

